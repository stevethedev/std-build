  "license": "MIT",
  "scripts": {
    "build": "ts-node ./bin/build.ts",
    "check": "npm-run-all --parallel check:*",
    "check:format": "prettier --check .",
    "check:lint": "eslint .",
    "check:types": "tsc --noEmit",
