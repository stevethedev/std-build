    "globals": "^15.4.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.0",
    "std-jest": "^0.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.12.0",
    "typescript-plugin-css-modules": "^5.1.0",
    "@types/glob-to-regexp": "^0.4.4"
  },
  "peerDependencies": {
    "esbuild": "^0.21.4",
